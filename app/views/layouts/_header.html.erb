<header>
  <div class = header-container>
    <div class = header-left>
      <a href = "/" class = logo>
        <h2><i>studio schedule</i></h2>
      </a>
      <% if current_user %>
        <ul>
          <li class = "menu"><a href = <%= "/users/#{current_user.id}/show"%> >プロフィール</a></li>
          <li class = "menu"><a href = <%= "/users/#{current_user.id}/edit"%> >プロフィール編集</a></li>
          <% if current_user.open == false %>
            <li class = "menu"><a href = <%= "/users/#{current_user.id}/entry"%> >スタジオ抽選</a></li>
            <li class = "menu"><a href = <%= "/studios"%> >応募状況</a></li>
          <% end %>
          <% if current_user.admin == true or current_user.open == true %>
            <li class = "menu"><a href = <%= "/studios/election"%> >抽選結果</a></li>
          <% end %>
          <li class = "menu"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        </ul>
      <% end %>
    </div>
    <ul class = header-right>
      <% if current_user %>
        <li class = "hamburger-menu">
          <span class = "nav_toggle">
            <i></i>
            <i></i>
            <i></i>
          </span>
          <nav class = "nav">
            <ul class = "nav_menu_ul">
              <li class = "nav_menu_li"><a href = <%= "/users/#{current_user.id}/show"%> >プロフィール</a></li>
              <li class = "nav_menu_li"><a href = <%= "/users/#{current_user.id}/edit"%> >プロフィール編集</a></li>
              <% if current_user.open == false %>
                <li class = "nav_menu_li"><a href = <%= "/users/#{current_user.id}/entry"%> >スタジオ抽選</a></li>
                <li class = "nav_menu_li"><a href = <%= "/studios"%> >応募状況</a></li>
              <% end %>
              <% if current_user.admin == true or current_user.open == true %>
                <li class = "nav_menu_li"><a href = <%= "/studios/election"%> >抽選結果</a></li>
              <% end %>
              <li class = "nav_menu_li"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            </ul>
          </nav>
        </li>
        <li class = "user-name">
          <%= current_user.name%>
        </li>
        <li>
          <% if current_user.image.nil? %>
            <img class = "icon-image" alt = "デフォルトアイコン" src = "https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon-9263fc59c414b7228d256fc178dcb22183561357950a68f5ad086ba7ee054974.jpg">
          <% else %>
            <img class = "icon-image" alt = "アイコン" src = "<%= "/user_images/#{current_user.image}" %>">
          <% end %>
        </li>
      <% else %>
        <li>
          <a href = /users/sign_up class = "signup-link">新規登録</a>
        </li>
        <li>
          <a href = /users/sign_in class = "login-link">ログイン</a>
        </li>
      <% end %>
    </ul>
  </div>
</header>
